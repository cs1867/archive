{
    "policy": {
      "description": "hot warm delete",
      "default_state": "hot",
      "states": [
        {
          "name": "hot",
          "actions": [
            {
              "index_priority": {
                "priority": 100
              }
            }
          ],
          "transitions": [
            {
              "state_name": "warm",
              "conditions": {
                "min_index_age": "1d"
              }
            }
          ]
        },
        {
          "name": "warm",
          "actions": [
            {
              "index_priority": {
                "priority": 50
              }
            }
          ],
          "transitions": [
            {
              "state_name": "delete",
              "conditions": {
                "min_index_age": "7d"
              }
            }
          ]
        },
        {
          "name": "delete",
          "actions": [
            {
              "delete": {}
            }
          ]
        }
      ],
      "ism_template": {
        "index_patterns": ["prometheus*"],
        "priority": 100
      }
    }
  }
  